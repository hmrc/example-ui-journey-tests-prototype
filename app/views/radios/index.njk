{% extends "layouts/step.njk" %}

{% block step %}

{{ govukRadios({
  name: thisStepFieldName,
  values: journeyAnswers[thisStepData.field],
  fieldset: {
    legend: {
      text: thisStepData.question | default("Where do you live?"),
      isPageHeading: true,
      classes: "govuk-fieldset__legend--l"
    }
  },
  hint: {
    text: "If you have dual nationality, select all options that are relevant to you."
  },
  items: thisStepData.items | default([
    {
      value: "england",
      text: "England"
    },
    {
      value: "scotland",
      text: "Scotland"
    },
    {
      value: "wales",
      text: "Wales"
    },
    {
      value: "northern-ireland",
      text: "Northern Ireland"
    }
  ])
}) }}

{% endblock %}